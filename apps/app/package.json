{
  "name": "sharego-app",
  "version": "0.4.0",
  "private": true,
  "description": "ShareGo â€” unified app (desktop + mobile)",
  "author": {
    "name": "ShareGo",
    "email": "mehdimamasxd@gmail.com"
  },
  "homepage": "https://github.com/MehdiMamas/ShareGo",
  "repository": {
    "type": "git",
    "url": "https://github.com/MehdiMamas/ShareGo.git"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "typecheck": "tsc --noEmit && tsc --noEmit -p electron/tsconfig.json",
    "lint": "eslint src/ electron/",
    "build:electron-main": "tsc -p electron/tsconfig.json",
    "build:web": "vite build",
    "build:electron": "pnpm run build:electron-main && pnpm run build:web",
    "dev:electron": "pnpm run build:electron-main && ELECTRON_DEV_URL=http://localhost:5173 electron . & vite",
    "dev:vite": "vite",
    "pack:mac": "pnpm run build:electron && electron-builder --mac --dir",
    "dist:mac": "pnpm run build:electron && electron-builder --mac",
    "test:e2e": "npx playwright test",
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios"
  },
  "build": {
    "appId": "com.sharego.app",
    "productName": "ShareGo",
    "publish": null,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "web/dist/**/*",
      "!**/node_modules/react-native{,/**}",
      "!**/node_modules/react-native-*{,/**}",
      "!**/node_modules/@react-native{,/**}",
      "!**/node_modules/@react-native-*{,/**}",
      "!**/node_modules/jsc-android{,/**}",
      "!**/node_modules/@babel{,/**}",
      "!**/node_modules/react-devtools-core{,/**}",
      "!**/node_modules/metro{,/**}",
      "!**/node_modules/metro-*{,/**}",
      "!**/node_modules/hermes-*{,/**}",
      "!**/node_modules/flow-*{,/**}",
      "!**/node_modules/react-dom{,/**}",
      "!**/node_modules/react{,/**}",
      "!**/node_modules/babel-*{,/**}",
      "!**/node_modules/caniuse-lite{,/**}",
      "!**/node_modules/terser{,/**}",
      "!**/node_modules/@react-navigation{,/**}",
      "!**/node_modules/node-forge{,/**}",
      "!**/node_modules/@noble{,/**}",
      "!**/node_modules/**/*.map"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "build/icon-1024.png",
      "category": "public.app-category.utilities",
      "darkModeSupport": true,
      "hardenedRuntime": false,
      "extendInfo": {
        "NSCameraUsageDescription": "ShareGo uses the camera to scan QR codes for secure device pairing.",
        "NSMicrophoneUsageDescription": "ShareGo does not use the microphone."
      }
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon-256.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "mehdimamasxd@gmail.com"
    }
  },
  "dependencies": {
    "@react-native-clipboard/clipboard": "^1.16.3",
    "@react-navigation/native": "^7.1.28",
    "@react-navigation/native-stack": "^7.12.0",
    "@sharego/core": "workspace:*",
    "@types/js-sha1": "^0.6.3",
    "bonjour-service": "^1.3.0",
    "buffer": "^6.0.3",
    "fast-text-encoding": "^1.0.6",
    "js-sha1": "^0.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-native": "0.75.5",
    "react-native-get-random-values": "~1.11.0",
    "react-native-haptic-feedback": "^2.3.3",
    "react-native-libsodium": "^1.7.0",
    "react-native-network-info": "^5.2.2",
    "react-native-qrcode-svg": "^6.3.3",
    "react-native-safe-area-context": "4.14.1",
    "react-native-screens": "3.37.0",
    "react-native-svg": "15.15.2",
    "react-native-svg-web": "^1.0.9",
    "react-native-tcp-socket": "^6.4.1",
    "react-native-vision-camera": "^4.7.3",
    "react-native-web": "^0.21.2",
    "tweetnacl": "^1.0.3",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@babel/runtime": "^7.28.6",
    "@playwright/test": "^1.58.2",
    "@react-native/babel-preset": "^0.75.0",
    "@react-native/metro-config": "^0.83.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.5.12",
    "@vitejs/plugin-react": "^5.1.3",
    "detox": "^20.47.0",
    "electron": "40.2.1",
    "electron-builder": "^26.7.0",
    "html5-qrcode": "^2.3.8",
    "jest": "^30.2.0",
    "playwright-core": "^1.58.2",
    "typescript": "^5.7.0",
    "vite": "^7.3.1"
  }
}
